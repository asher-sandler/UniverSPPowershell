<?xml version="1.0" encoding="utf-8"?>
<rows>
	<config>
		<fileName>registrationForm</fileName>
		<docHeader>Registration Form for a Master Degree</docHeader>
		<finalMessage>The information was saved successfully</finalMessage>
		<missingDataMessage>All marked fields must be filled properly</missingDataMessage>
		<registrationMessage>You are not registered for this program. <![CDATA[<a href="http://grs2.ekmd.huji.ac.il/home">Register here</a>]]></registrationMessage>
		<docTypeList>docType</docTypeList>
		<docTypeColumn>Document Type</docTypeColumn>
		<docType>0. טופס הרשמה - Registration Form</docType>
		<calculations>no</calculations>
	</config>

	<row>
		<Header>The School of Computer Science and Engineering</Header>
	</row>

	<row>
		<Header>Personal Information</Header>
	</row>

	<row>
		<Label>
			<text>First Name:</text>
			<width>85</width>
		</Label>
		<control>
			<Type>TextLabel</Type>
			<Data>firstName</Data>
			<width>150</width>
		</control>

		<Label>
			<text>Last Name:</text>
			<width>85</width>
		</Label>
		<control>
			<Type>TextLabel</Type>
			<Data>surname</Data>
			<width>150</width>
		</control>
	</row>

	<row>
		<Label>
			<text>ID:</text>
			<width>85</width>
		</Label>
		<control>
			<Type>TextLabel</Type>
			<Data>studentId</Data>
			<width>150</width>
		</control>

		<Label>
			<text>Gender:</text>
			<width>85</width>
		</Label>
		<control>
			<Type>DropDownList</Type>
			<Data>genderHe</Data>
			<List>genderListEn</List>
			<width>100</width>
			<required>yes</required>
		</control>
	</row>

	<row>
		<Label></Label>
	</row>

	<row>
		<Header>Contact Information</Header>
	</row>

	<row>
		<Label>
			<text>Address:</text>
			<width>70</width>
		</Label>
		<control>
			<Type>TextBox</Type>
			<Data>addressHe</Data>
			<width>150</width>
			<required>yes</required>
		</control>

		<Label>
			<text>City:</text>
			<width>70</width>
		</Label>
		<control>
			<Type>TextBox</Type>
			<Data>cityHe</Data>
			<width>150</width>
			<required>yes</required>
		</control>
	</row>

	<row>
		<Label>
			<text>Zip Code:</text>
			<width>70</width>
		</Label>
		<control>
			<Type>TextBox</Type>
			<Data>zipHe</Data>
			<width>150</width>
			<required>yes</required>
		</control>

		<Label>
			<text>Mobile:</text>
			<width>70</width>
		</Label>
		
		<control>
			<Type>TextBox</Type>
			<Data>mobile</Data>
			<width>150</width>
			<required>yes</required>
		</control>
	</row>

	<row>
		<Label>
			<text>Phone:</text>
			<width>70</width>
		</Label>
		
		<control>
			<Type>TextBox</Type>
			<Data>phoneHe</Data>
			<width>150</width>
		</control>

		<Label>
			<text>Email:</text>
			<width>70</width>
		</Label>
		
		<control>
			<Type>TextBox</Type>
			<Data>email</Data>
			<width>200</width>
			<required>yes</required>
		</control>
	</row>

	<row>
		<Label>
			<text>Country:</text>
			<width>70</width>
		</Label>
		<control>
			<Type>DropDownList</Type>
			<Data>country</Data>
			<width>150</width>
			<required>yes</required>
			<List>countryListEN</List>
		</control>
	</row>

	<row>
		<Label></Label>
	</row>

	<row>
		<Header>Requested Field of Study</Header>
	</row>

	<row>
		<Label>
			<text>I would like to enroll for M.Sc studies in the following department:</text>
			<width>500</width>
		</Label>
	</row>

	<row>
		<Label>
			<text>First Priority:</text>
			<width>115</width>
		</Label>
		<control>
			<Type>DropDownList</Type>
			<Data>department1</Data>
			<List>departmentListEn</List>
			<width>310</width>
			<required>yes</required>
		</control>
	</row>

	<row>
		<Label>
			<text>Second Priority:</text>
			<width>115</width>
		</Label>
		<control>
			<Type>DropDownList</Type>
			<Data>department2</Data>
			<List>departmentListEn</List>
			<width>310</width>
		</control>
	</row>

	

	<row>
		<Label>
			<text>Your application will be discussed according to the order of your chosen priorities.</text>
			<width>520</width>
		</Label>
		
		<Label>
			<text></text>
			<width>2</width>
		</Label>
	</row>

	<row>
		<Label>
			<text>Please specify the name of the faculty member who is willing to guide you in research (optional):</text>
			<width>520</width>
		</Label>
		
		<Label>
			<text></text>
			<width>2</width>
		</Label>
	</row>
	
	<row>
		<control>
			<Type>TextBox</Type>
			<Data>advisorName</Data>
			<width>200</width>
		</control>
		
		<Label>
			<text></text>
			<width>2</width>
		</Label>
	</row>

	<row>
		<Label></Label>
	</row>

	<row>
		<Header>Prior Academic Education</Header>
	</row>

	<row>
		<Label>
			<text>B.Sc Institute:</text>
			<width>115</width>
		</Label>

		<control>
			<Type>TextBox</Type>
			<Data>firstDegreeInstitute</Data>
			<width>200</width>
			<required>yes</required>
		</control>
	</row>

	<row>
		<Label>
			<text>Department:</text>
			<width>115</width>
		</Label>

		<control>
			<Type>TextBox</Type>
			<Data>firstDegreeDepartment</Data>
			<width>200</width>
			<required>yes</required>
		</control>
	</row>

	<row>
		<Label>
			<text>Graduation Date:</text>
			<width>115</width>
		</Label>

		<control>
			<Type>TextBox</Type>
			<Data>firstDegreeGraduation</Data>
			<width>80</width>
			<regex>^($|(((0[1-9]|[12][0-9]|3[01])\/(0[13578]|1[02])\/((19|[2-9][0-9])[0-9]{2}))|((0[1-9]|[12][0-9]|30)\/(0[13456789]|1[012])\/((19|[2-9][0-9])[0-9]{2}))|((0[1-9]|1[0-9]|2[0-8])\/02\/((19|[2-9][0-9])[0-9]{2}))|(29\/02\/((1[6-9]|[2-9][0-9])(0[48]|[2468][048]|[13579][26])|((16|[2468][048]|[3579][26])00)))))$</regex>
			<tooltip>DD/MM/YYYY</tooltip>
		</control>

		<Label>
			<text>Grade Average*:</text>
			<width>110</width>
		</Label>

		<control>
			<Type>TextBox</Type>
			<Data>firstDegreeGrades</Data>
			<width>80</width>
			<required>yes</required>
		</control>
	</row>

	<row>
		<Label>
			<text><![CDATA[<b>*Please write the grade average as appears in the transcript</b>]]></text>
			<width>500</width>
			<print>no</print>
		</Label>
		
		<Label>
			<text></text>
			<width>2</width>
			<print>no</print>
		</Label>
	</row>

	<row>
		<Label>
			<text>Please notice that the last date for registration is the opening day of the coming academic year</text>
			<width>520</width>
		</Label>
		
		<Label>
			<text></text>
			<width>2</width>
		</Label>
	</row>

	<row>
		<Label></Label>
	</row>
	
	<row>
		<Label>
			<text>I have recommendations that will be added to my application (there is no obligation to have recommendations)</text>
			<width>450</width>
		</Label>
		
		<control>
			<Type>RadioButtonList</Type>
			<List>yesNoListEn</List>
			<Data>recommendations</Data>
			<width>70</width>
			<required>no</required>
		</control>
	</row>
	
	<row>
		<Label></Label>
	</row>

	<row>
		<Header>General statement and waiver of confidentiality</Header>
	</row>

	<row>
		<control>
			<Type>CheckBox</Type>
			<Data>declaration1</Data>
			<width>20</width>
			<required>yes</required>
			<print>yes</print>
		</control>

		<Label>
			<text>I agree for you to have access to all my B.Sc scores for the purpose of discussing this request.</text>
			<width>500</width>
			<print>yes</print>
		</Label>
	</row>

	<row>
		<control>
			<Type>CheckBox</Type>
			<Data>declaration2</Data>
			<width>20</width>
			<required>yes</required>
			<print>yes</print>
		</control>

		<Label>
			<text>I hereby declare that the information provided above is accurate.</text>
			<width>500</width>
			<print>yes</print>
		</Label>
	</row>

	<row>
		<Label></Label>
	</row>

	<row>
		<Button>Save</Button>
	</row>
	
	<row>
		<Label></Label>
	</row>
	
	<row>
		<control>
			<Type>finalMessage</Type>
			<Data>MyCustomLabel</Data>
			<width>500</width>
			<Text></Text>
		</control>
	</row>
</rows>
